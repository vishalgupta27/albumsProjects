<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Albums" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="s">false</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
